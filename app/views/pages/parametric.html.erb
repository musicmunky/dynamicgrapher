<%- view_title "Parametric Equations" %>
<% content_for :grapher do %>

	<%= javascript_include_tag "parametrics/calc_parametric" %>
	<%= javascript_include_tag "parametrics/jsgcalc_parametric" %>
	<%= javascript_include_tag "parametrics/jsgui_parametric" %>
	<%= javascript_include_tag "parametrics/dg_parametric" %>

	<%= render partial: "shared/toolbar" %>

	<div id="sidewrapper">
		<div id="graph_sidebar">
			<div id="buttonbar" style="margin-top:25px;">
				<a class="fancybutton" href="javascript:void(0)" onclick="jsgui.evaluate()">Evaluate</a>
				<a class="fancybutton greybutton" href="javascript:void(0)" id="settings_button" onclick="$('#settings').toggle(400)">
					<img src='assets/settings.png' alt='Settings' />
				</a><br /><br />
			</div>

			<div id="settings">
				<div id="angle_select" class="options_list">
					<a href="javascript:void(0)" onclick="jsgui.setAngles('degrees')" id="angle_select_degrees" class="option">DEG</a>
					<a href="javascript:void(0)" onclick="jsgui.setAngles('radians')" id="angle_select_radians" class="option option_selected">RAD</a>
					<a href="javascript:void(0)" onclick="jsgui.setAngles('gradians')" id="angle_select_gradians" class="option">GRAD</a>
				</div>

				<div id="gridlines_select" class="options_list">Gridlines:
					<a href="javascript:void(0)" onclick="jsgui.setGridlines('normal')" id="gridlines_select_normal" class="option option_selected">NORMAL</a>
					<a href="javascript:void(0)" onclick="jsgui.setGridlines('less')" id="gridlines_select_less" class="option">LESS</a>
					<a href="javascript:void(0)" onclick="jsgui.setGridlines('off')" id="gridlines_select_off" class="option">OFF</a>
				</div>

				<div id="quality_select" class="options_list">Precision:
					<a href="javascript:void(0)" onclick="jsgui.setQuality(0.1)" id="quality_select_01" class="option">LOW</a>
					<a href="javascript:void(0)" onclick="jsgui.setQuality(0.5)" id="quality_select_05" class="option">MED</a>
					<a href="javascript:void(0)" onclick="jsgui.setQuality(1)" id="quality_select_1" class="option">HIGH</a>
					<a href="javascript:void(0)" onclick="jsgui.setQuality(5)" id="quality_select_5" class="option option_selected">ULTRA</a>
				</div>
			</div>
			<input type="hidden" value="" id="colorpickervalue" onchange="updateFunctionColor()" />
			<div id="graph_inputs" style="height:200px;border-bottom:1px solid #AAA;"></div>
			<div id="graph_parameters" style="height:200px;margin:5px;">
				<span style="display:block;float:left;width:100%;font-size: 16px;height: 20px;margin-bottom: 20px;">Parameters:</span>
				<div id="a_param" class="paramwrapperdiv">
					<div class="paramdiv">a = <span id="a_val_span">1</span></div>
					<input type="text" id="a_min" value="0" class="minmax" onkeyup="updateMinMax('a')" />
					<div class="slidediv">
						<input id="a_slider" type="range" min="-10" max="10" value="1" />
					</div>
					<input type="text" id="a_max" value="100" class="minmax" onkeyup="updateMinMax('a')" />
				</div>
				<div id="b_param" class="paramwrapperdiv">
					<div class="paramdiv">b = <span id="b_val_span">0</span></div>
					<input type="text" id="b_min" value="0" class="minmax" onkeyup="updateMinMax('b')" />
					<div class="slidediv">
						<input id="b_slider" type="range" min="-10" max="10" value="0" />
					</div>
					<input type="text" id="b_max" value="100" class="minmax" onkeyup="updateMinMax('b')" />
				</div>
				<div id="c_param" class="paramwrapperdiv">
					<div class="paramdiv">c = <span id="c_val_span">0</span></div>
					<input type="text" id="c_min" value="0" class="minmax" onkeyup="updateMinMax('c')" />
					<div class="slidediv">
						<input id="c_slider" type="range" min="-10" max="10" value="0" />
					</div>
					<input type="text" id="c_max" value="100" class="minmax" onkeyup="updateMinMax('c')" />
				</div>
			</div>
		</div>
	</div>

<% end %>